{
    "compilerOptions": {
        "allowJs": true,
        "module": "commonjs",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "outDir": "dist",
        "moduleResolution": "node",
        "jsx": "react",
        "resolveJsonModule": true,
        "paths": {
            "*": ["node_modules/*"]
        },
        "lib": ["dom", "dom.iterable", "esnext"]
    },
    "exclude": ["node_modules", "**/*.test.ts", "out"],
    "include": ["src/**/*"]
}
